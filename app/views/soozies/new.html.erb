<%= form_with(model: @user, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :eye_color %>
    <%= form.select :eye_color, options_for_select([['Blue', 'blue'], ['Green', 'green'], ['Brown', 'brown'], ['Hazel', 'hazel']]), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :height %>
    <%= form.select :height, options_for_select((140..200).step(5).map { |cm| ["#{cm} cm", cm] }), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :weight %>
    <%= form.select :weight, options_for_select((40..120).step(5).map { |kg| ["#{kg} kg", kg] }), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Profile", class: "btn btn-primary" %>
  </div>
<% end %>
