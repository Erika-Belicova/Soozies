


<%= @bookings.each do |booking| %>
  <%= booking.soozie.first_name %>
  <%= booking.soozie.last_name %>
  <%= link_to "Validate booking", validate_booking_path(booking), data: { turbo_method: :patch } %>
<% end %>


<div class='container'>
  <h1>My offers</h1>

  <% @bookings.each do |booking| %>
    <div class="my-4 card-product">
      <div class="d-flex align-items-center">
        <div class="card-product-infos">
          <h2><%= booking.soozie.first_name %></h2>
          <p>From <strong><%= booking.start_date.to_fs(:long_ordinal) %></strong> to <strong><%= booking.end_date.to_fs(:long_ordinal) %></strong></p>
          <div><strong><%= booking.duration_in_days %></strong> days</div>
        </div>
      </div>

      <div>
        <% if booking.validated? %>
          <p class='badge text-bg-success text-black'>Your booking is confirmed</p>
        <% else %>
          <%= link_to "Validate booking", validate_booking_path(booking), data: { turbo_method: :patch }, class: "btn btn-primary" %>
          <p class='badge text-bg-secondary'>You have not validated this booking</p>
        <% end %>
      </div>

    </div>
  <% end %>
</div>
